{% extends 'frontbase.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
    <div class="container">
        <h1>Siparis Detayi</h1>
        <div class="col-md-3">
            {{ include('home/_usersidebar.html.twig') }}
        </div>
        <div class="col-md-9">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ order.id }}</td>
                </tr>
                <tr>
                    <th>Userid</th>
                    <td>{{ order.userid }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ order.amount }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ order.name }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ order.address }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ order.city }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ order.phone }}</td>
                </tr>
                <tr>
                    <th>Shipinfo</th>
                    <td>{{ order.shipinfo }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ order.status }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ order.note }}</td>
                </tr>
                </tbody>
            </table>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Toplam</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for detail in orderdetails %}
                    <tr>
                        <td>{{ detail.id }}</td>
                        <td>{{ detail.name }}</td>
                        <td>{{ detail.price }}</td>
                        <td>{{ detail.amount }}</td>
                        <td>{{ detail.status }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


    <a href="{{ path('orders_edit', {'id': order.id}) }}">edit</a>

    {{ include('orders/_delete_form.html.twig') }}
{% endblock %}
